@using Gos.ServiceModel.Requests.List
@model Gos.Web.Models.List.ListIndexViewModel

<div class="pure-g additional" style="display:none;">
    <div class="pure-u-md-1-6 u-mobile-hidden"></div>
    <div class="pure-u-1-1 pure-u-md-2-3">
        <div class="search-module">
            <a class="btn-exit" href="#"><i class="material-icons">close</i></a>
            <div class="pure-g">
                <div class="pure-u-1-1 pure-u-md-1-4"><span>@ListResource["PartOfSpeech"]</span></div>
                <div class="pure-u-1-1 pure-u-md-1-4 condition">
                    @Html.DropDownList($"{nameof(ListSearch.Condition)}_Temp", Model.ConditionsList)
                </div>
                <div class="pure-u-1-1 pure-u-md-1-2">
                    @Html.DropDownList($"{nameof(ListSearch.PartOfSpeechIds)}_Temp", Model.PartOfSpeechesList, SharedResource["Any"].Value, new {data_attribute_count_url = Url.Action("AttributeCount", "PartOfSpeech"), data_details_url = Url.Action("Details", "PartOfSpeech")})
                </div>
            </div>
            <div class="pure-g pos-link" style="display: none;">
                <div class="pure-u-1-1"><a href="#">@SharedResource["Details"] <i class="material-icons pull-right">arrow_drop_down</i></a></div>
            </div>
            <div class="pure-g pos-holder" style="display:none;">
                <div class="pure-u-1-1"></div>
            </div>
        </div>
    </div>
</div>