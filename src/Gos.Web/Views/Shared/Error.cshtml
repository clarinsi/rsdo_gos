@{
    Layout = "_BaseLayout";
}
@using Gos.Web.Models.System
@model SystemErrorViewModel

@section BarSection
{
    <p class="page-title"><i class="material-icons">info_outline</i>Napaka @Model.StatusCode</p>
}

<div class="container">
    <div id="main-content">
        <div class="pure-g">
            <div class="pure-u-1-1">
                <div class="panel big-panel">
                    <div class="pure-g">
                        <div class="pure-u-1-12"></div>
                        <div class="pure-u-5-6">
                            <h3>Napaka</h3>
                            <p class="intro">Prišlo je do napake. Prosimo, poskusite znova. Ob prijavi napake navedite ID dogodka <strong>@Model.RequestId</strong>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>